  <!-- View configuration -->
  <views>
    <view name="default" displayIfRecord="count(mdb:MD_Metadata/mdb:metadataScope/mdb:MD_MetadataScope/mdb:resourceScope/mcc:MD_ScopeCode[@codeListValue='service']) = 0">
      <sidePanel>
        <directive data-gn-onlinesrc-list=""/>
