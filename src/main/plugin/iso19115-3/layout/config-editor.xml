              			</srv:optionality>
              			<srv:repeatability>
                			<gco:Boolean>false</gco:Boolean>
              			</srv:repeatability>
            			</srv:SV_Parameter>
               		</srv:parameter>
            		</srv:SV_OperationMetadata>	
							</srv:containsOperations>
							</snippet>
						</template>
