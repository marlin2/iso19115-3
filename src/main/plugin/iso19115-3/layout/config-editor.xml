      <tab id="publications" mode="flat">
        <section>
          <field name="publications" xpath="/mdb:MD_Metadata/mdb:identificationInfo/mri:MD_DataIdentification/mri:additionalDocumentation" templateModeOnly="true" isMissingLabel="noPublications" >
            <template>
              <values>
                <key label="publicationTitle" xpath="cit:CI_Citation/cit:title/gco:CharacterString" use="textarea" tooltip="publication_title"/>
                <key label="publicationDate" xpath="cit:CI_Citation/cit:date/cit:CI_Date/cit:date/gco:Date" use="date" tooltip="publication_date"/>
                <key label="publicationAuthor" xpath="cit:CI_Citation/cit:citedResponsibleParty/cit:individual/cit:CI_Individual/cit:name/gco:CharacterString" use="textarea" tooltip="publication_author"/>
              </values>
              <snippet>

                <mri:additionalDocumentation>
                  <cit:CI_Citation>
                     <cit:title>
                        <gco:CharacterString>{{publicationTitle}}</gco:CharacterString>
                     </cit:title>
                     <cit:date>
                        <cit:CI_Date>
                           <cit:date>
                             <gco:Date>{{publicationDate}}</gco:Date>
                           </cit:date>
                           <cit:dateType>
                              <cit:CI_DateTypeCode codeList="codeListLocation#CI_DateTypeCode" codeListValue="publication">publication</cit:CI_DateTypeCode>
                           </cit:dateType>
                        </cit:CI_Date>
                     </cit:date>
                     <cit:citedResponsibleParty>
                       <cit:role>
                         <cit:CI_RoleCode codeList="codeListLocation#CI_RoleCode" codeListValue="author">author</cit:CI_RoleCode>
                       </cit:role>
                       <cit:individual>
                         <cit:CI_Individual>
                           <cit:name>
                             <gco:CharacterString>{{publicationAuthor}}</gco:CharacterString>
                           </cit:name>
                         </cit:CI_Individual>
                       </cit:individual> 
                     </cit:citedResponsibleParty>
                  </cit:CI_Citation>
                </mri:additionalDocumentation>

              </snippet>
            </template>
          </field>
        </section>
      </tab>

      <!-- Elements that should not use the "flat" mode -->
      <flatModeExceptions>
